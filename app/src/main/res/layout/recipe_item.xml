<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="2dp">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/cardview_default_radius"
        app:cardElevation="@dimen/cardview_default_elevation">
        <RelativeLayout
            android:padding="@dimen/txt_recipe_item_padding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/img_recipe_image"
            android:layout_width="@dimen/img_recipe_image_widthheight"
            android:layout_height="@dimen/img_recipe_image_widthheight"
            android:adjustViewBounds="true"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/txt_recipe_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/img_recipe_image"
            android:padding="@dimen/txt_recipe_item_padding"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:fontFamily="san-serif"/>
<!--            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/transparent_view_height"
                android:layout_alignParentBottom="true"
                android:background="@color/black_transparent"/>-->
        <!--<TextView
            android:id="@+id/txt_recipe_serving"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/txt_recipe_name"/>-->
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>