<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txt_ingredient_quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quantity"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"/>
            <TextView
                android:id="@+id/txt_ingredient_measure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Measure"
                android:layout_toEndOf="@+id/txt_ingredient_quantity"
                android:layout_toRightOf="@id/txt_ingredient_quantity"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"/>
            <TextView
                android:id="@+id/txt_ingredient_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ingredient"
                android:layout_toEndOf="@+id/txt_ingredient_measure"
                android:layout_toRightOf="@+id/txt_ingredient_measure"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"/>
        </RelativeLayout>
</LinearLayout>